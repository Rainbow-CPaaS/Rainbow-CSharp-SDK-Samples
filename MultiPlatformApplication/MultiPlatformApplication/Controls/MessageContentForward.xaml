<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MultiPlatformApplication.Controls.MessageContentForward"
             Margin="0"
             Padding="0">
  <ContentView.Content>
        <Grid x:Name="Grid"
              BackgroundColor="Transparent"
              Margin="0"
              Padding="5,2,2,0"
              RowSpacing="0"
              ColumnSpacing="0"
              HorizontalOptions="Fill">
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Image x:Name="Image" Grid.Column="0" Margin="0" VerticalOptions="Center" />
            <Label x:Name="Label" Grid.Column="1" Margin="0" Padding="0" VerticalOptions="CenterAndExpand" MaxLines="1" LineBreakMode="TailTruncation" FontSize="{StaticResource FontSizeSmall}" Text="Forwarded"/>
        </Grid>
    </ContentView.Content>
</ContentView>