<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:effects="clr-namespace:MultiPlatformApplication.Effects"
             x:Class="MultiPlatformApplication.Controls.MessageContentBodyWithCode"
             Margin="0"
             Padding="2"
             BackgroundColor="{StaticResource ColorMain}">
  <ContentView.Content>
        <Frame Padding="6"
               Margin="0"
               HasShadow="False"
               CornerRadius="0"
               BackgroundColor="White">
            <Label x:Name="Label" 
                   HorizontalOptions="Start" 
                   FontSize="{StaticResource FontSizeSmall}" 
                   VerticalOptions="Center" 
                   effects:SelectableLabelEffect.Enabled="True">
                <Label.Margin>
                    <OnPlatform x:TypeArguments="Thickness">
                        <On Platform="UWP, WPF, macOs" Value="0,0,24,0" /> <!-- NEED TO ADD SPACE FOR "BtnAction" IN THESE PLATFORMS-->
                        <On Platform="Default" Value="0,0,0,0" />
                    </OnPlatform>
                </Label.Margin>
            </Label>
        </Frame>
    </ContentView.Content>
</ContentView>