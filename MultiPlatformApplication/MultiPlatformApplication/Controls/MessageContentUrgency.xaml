<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MultiPlatformApplication.Controls.MessageContentUrgency"
             Margin="0"
             Padding="0">
    <ContentView.Content>
      <StackLayout x:Name="StackLayout"
                   Orientation="Horizontal"
                   Margin="0"
                   Padding="6,3">
          
            <Image x:Name="Image" 
                   Margin="0"
                   HeightRequest="20" 
                   WidthRequest="20"/>
            <Label x:Name="Label" 
                   Margin="0"
                   Padding="0"
                   VerticalOptions="Center"
                   FontAttributes="Bold" 
                   FontSize="{StaticResource FontSizeSmall}"/>
      </StackLayout>
  </ContentView.Content>
</ContentView>