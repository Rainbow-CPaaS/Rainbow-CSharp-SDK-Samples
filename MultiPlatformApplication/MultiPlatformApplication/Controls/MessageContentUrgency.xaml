<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MultiPlatformApplication.Controls.MessageContentUrgency"
             Margin="0"
             Padding="0">
    <ContentView.Content>
      <StackLayout x:Name="StackLayout"
                   Orientation="Horizontal"
                   Margin="0"
                   Padding="6,3">
            
          <!-- 
            /!\ We need to have a Width at least of '120': Image => 20, Label => 100
            120 is the the minimal width specified in MessageContent.xaml 
            If not the background correct will not be correct
          -->
          
            <Image x:Name="Image" 
                   Margin="0"
                   HeightRequest="20" 
                   WidthRequest="20"/>
            <Label x:Name="Label" 
                   Margin="0"
                   Padding="0"
                   VerticalOptions="Center"
                   FontAttributes="Bold" 
                   WidthRequest="100"
                   FontSize="{StaticResource FontSizeSmall}"/>
      </StackLayout>
  </ContentView.Content>
</ContentView>