<log4net>
    <!-- We want to log entries using a rolling system -->
    <appender name="FileAppender" type="log4net.Appender.FileAppender">
  
        <!-- Path and Name of the file which will contain log entries -->
        <file value="./LogSampleContact.log" />
    
        <!-- We want up to 10 files created of 8MB maximum each using a rolling system based on theirs size --> 
        <appendToFile value="true" />
        <maximumFileSize value="8MB" /> 
        <maxSizeRollBackups value="10" />
        <rollingStyle value="Size"/>
        <staticLogFileName value="true"/>

        <!-- define how log entries are store in files -->
        <layout type="log4net.Layout.PatternLayout">
            <conversionPattern value="%date %5level %10thread %35logger:%4line - %message%newline" />
        </layout>
    </appender>

    <appender name="console" type="log4net.Appender.ConsoleAppender">
        <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date %5level %10thread %35logger:%4line - %message%newline" />
        </layout>
    </appender>

    <root>
        <!-- Level value can be: OFF FATAL ERROR WARN INFO DEBUG ALL-->
        <level value="DEBUG" />
        <appender-ref ref="RollingFile" />
        <appender-ref ref="console" />
    </root>
</log4net>
