<log4net>
	<appender name="RollingFile" type="log4net.Appender.FileAppender">
		<file value="SampleInstantMessaging.log" />
		<appendToFile value="true" />
		<layout type="log4net.Layout.PatternLayout">
			<conversionPattern value="%date %5level %10thread %35logger:%4line - %message%newline" />
		</layout>
	</appender>

  <appender name="console" type="log4net.Appender.ConsoleAppender">
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date %5level %10thread %35logger:%4line - %message%newline" />
    </layout>
  </appender>

	<root>
	   <!-- Level value can be: OFF FATAL ERROR WARN INFO DEBUG ALL-->
		<level value="DEBUG" />
		<appender-ref ref="console" />
	</root>
</log4net>