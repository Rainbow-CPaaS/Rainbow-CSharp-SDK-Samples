<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <DataTemplate x:Key="MessageCurrentUserDataTemplate">
        <!-- BINDING  - MessageViewModel object -->
        <Grid HorizontalAlignment="Right">
            <Grid.ColumnDefinitions>
                <!-- SPACE -->
                <ColumnDefinition Width="4" />
                <!-- AVATAR (not displayed here but add space to be coherent with other ViewCell -->
                <ColumnDefinition Width="40" />
                <!-- SPACE -->
                <ColumnDefinition Width="4" />
                <!-- BODY -->
                <ColumnDefinition Width="*" />
                <!-- SPACE -->
                <ColumnDefinition Width="4" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="4" />
            </Grid.RowDefinitions>

            <Border 
                Grid.Row="0" 
                Grid.Column="3"
                Background="{Binding BackgroundColor}"
                CornerRadius="8" 
                Padding="8"
                VerticalAlignment="Center"
                HorizontalAlignment="Right">
                <Grid 
                    HorizontalAlignment="Right">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <!-- DISPLAY NAME -->
                        <RowDefinition Height="*" />

                        <!-- ADD SPACE-->
                        <RowDefinition Height="4" />

                        <!-- REPLY PART -->
                        <RowDefinition Height="*" />

                        <!-- BODY PART -->
                        <RowDefinition Height="*" />

                        <!-- FILE ATTACHMENT -->
                        <RowDefinition Height="*" />

                        <!-- ADD SPACE-->
                        <RowDefinition Height="4" />

                        <!--- DATE + EDITED + RECEIPT -->
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!--#region REPLY PART-->
                    <Border 
                        Grid.Row="2" 
                        Grid.Column="0"
                        Visibility="{Binding ReplyPartIsVisible}"
                        Background="{Binding ReplyBackgroundColor}"
                        CornerRadius="4" 
                        Padding="4"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Left"
                        Margin="4">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <TextBlock
                                Grid.Row="0" 
                                Grid.Column="0" 
                                HorizontalAlignment="Left" 
                                VerticalAlignment="Center" 
                                Foreground="Black"
                                FontWeight="Bold"
                                FontSize="10"
                                TextWrapping="Wrap"
                                TextTrimming="CharacterEllipsis"
                                MaxHeight="20"
                                Text="{Binding ReplyPeerDisplayName}"/>
                            <TextBlock 
                                Grid.Row="1" 
                                Grid.Column="0" 
                                HorizontalAlignment="Left" 
                                VerticalAlignment="Center" 
                                Foreground="Black" 
                                FontSize="12"
                                FontWeight="Normal"
                                TextWrapping="Wrap"
                                TextTrimming="CharacterEllipsis"
                                MaxHeight="36"
                                Text="{Binding ReplyBody}"/>
                        </Grid>
                    </Border>
                    <!--#endregion REPLY PART-->

                    <!--#region BODY PART-->
                    <TextBlock 
                        Grid.Row="3" 
                        Grid.Column="0"
                        HorizontalAlignment="Left" 
                        VerticalAlignment="Center" 
                        FontSize="12" 
                        FontWeight="Normal"
                        Foreground="{Binding BodyColor}"
                        FontStyle="{Binding BodyFontStyle}" 
                        Text="{Binding Body}" 
                        Visibility="{Binding BodyIsVisible}"
                        TextWrapping="Wrap"
                        />
                    <!--#endregion BODY PART-->

                    <!--#region FILE ATTACHMENT -->
                    <Grid  
                        Grid.Row="4" 
                        Grid.Column="0" 
                        Margin="0,4,0,0"
                        HorizontalAlignment="Left"
                        Visibility="{Binding FileAttachmentIsVisible}">

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Image 
                            Grid.Row="0" 
                            Grid.Column="0"
                            Source="{Binding FileAttachmentImageSource}" 
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center" 
                            RenderOptions.BitmapScalingMode="HighQuality"
                            Width="{Binding FileAttachmentImageWidth}" 
                            Height="{Binding FileAttachmentImageHeight}">
                            <!--<Image.GestureRecognizers>
                                <TapGestureRecognizer Tapped="FileAttachment_Tapped" CommandParameter="{Binding .}"/>
                            </Image.GestureRecognizers>-->
                        </Image>

                        <StackPanel
                            Margin="5,0,0,0"
                            Grid.Row="0" 
                            Grid.Column="1" 
                            Orientation="Vertical" 
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"  
                            Visibility="{Binding FileInfoIsVisible}">
                            <TextBlock 
                                HorizontalAlignment="Left" 
                                VerticalAlignment="Center" 
                                FontSize="11" 
                                Foreground="{Binding BodyColor}" 
                                Text="{Binding FileName}"
                                TextWrapping="Wrap"
                                TextTrimming="CharacterEllipsis"
                                MaxHeight="20"/>
                            <TextBlock
                                HorizontalAlignment="Left" 
                                VerticalAlignment="Center" 
                                FontSize="11"
                                Foreground="{Binding BodyColor}"
                                Text="{Binding FileSize}"/>
                        </StackPanel>
                    </Grid>
                    <!--#endregion FILE ATTACHMENT -->

                    <!--#region MSG DATE + EDITED info -->
                    <StackPanel
                        Grid.Row="6" 
                        Grid.Column="0"
                        Orientation="Horizontal"  
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center">
                        <TextBlock  
                            HorizontalAlignment="Right" 
                            VerticalAlignment="Center"
                            Foreground="Black" 
                            FontSize="9"
                            Text="{Binding MessageDateDisplay}"/>
                        <TextBlock 
                            HorizontalAlignment="Right" 
                            VerticalAlignment="Center"
                            Foreground="Black" 
                            FontSize="9" 
                            Text=" - Edited" 
                            Visibility="{Binding EditedIsVisible}"/>
                        <Image 
                            HorizontalAlignment="Right" 
                            VerticalAlignment="Center" 
                            Width="12" 
                            Height="12" 
                            RenderOptions.BitmapScalingMode="HighQuality"
                            Source="{Binding ReceiptImageSource}" 
                            Margin="4, 0, 0, 0" />
                    </StackPanel>
                    <!--#endregion MSG DATE + EDITED info -->
                    
                </Grid>
            </Border>
        </Grid>
    </DataTemplate>

</ResourceDictionary>