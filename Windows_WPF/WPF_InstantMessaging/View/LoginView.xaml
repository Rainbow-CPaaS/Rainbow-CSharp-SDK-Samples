<Window x:Class="InstantMessaging.View.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.FontWeight="Medium"
        TextElement.FontSize="14"
        FontFamily="{materialDesign:MaterialDesignFont}"
        xmlns:local="clr-namespace:InstantMessaging.View"
        xmlns:helpersUI="clr-namespace:InstantMessaging.HelpersUI"
        mc:Ignorable="d" 
        d:DesignHeight="524" d:DesignWidth="416"
        Title="Rainbow"
        Height="454"
        Width="416"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">


    <Grid Margin="20, 40, 20, 0" VerticalAlignment="Top" HorizontalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30" />
            <ColumnDefinition Width="300" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Image 
            x:Name="ImageLogo"
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Width="120" 
            Height="120" 
            HorizontalAlignment="Center" 
            Stretch="UniformToFill"
            Source="{Binding Logo}"/>

        <materialDesign:PackIcon 
            Margin="0, 25, 0, 20"
            Grid.Row="1" 
            Grid.Column="0" 
            Kind="Account" 
            HorizontalAlignment="Right"
            Foreground="{Binding ElementName=EntryLogin, Path=BorderBrush}" />

        <TextBox
            x:Name="EntryLogin"
            Margin="20, 20, 0, 20"
            Grid.Row="1" 
            Grid.Column="1"
            materialDesign:HintAssist.Hint="Login"
            Width="260"
            HorizontalAlignment="Left"
            IsEnabled="{Binding IsNotBusy}">
            <TextBox.Text>
                <Binding
                    Path="Login"
                    UpdateSourceTrigger="PropertyChanged">
                    <Binding.ValidationRules>
                        <helpersUI:NotEmptyValidationRule ValidatesOnTargetUpdated="True"/>
                    </Binding.ValidationRules>
                </Binding>
            </TextBox.Text>
        </TextBox>

        <materialDesign:PackIcon 
            Margin="0, 25, 0, 20"
            Grid.Row="2" 
            Grid.Column="0" 
            Kind="Key" 
            HorizontalAlignment="Right"
            Foreground="{Binding ElementName=EntryPassword, Path=BorderBrush}" />

        <PasswordBox 
            Margin="0, 20, 0, 20"
            x:Name="EntryPassword"
            Grid.Row="2" 
            Grid.Column="1" 
            materialDesign:HintAssist.Hint="Password"
            PasswordChar="*"
            Width="260"
            HorizontalAlignment="Center" 
            IsEnabled="{Binding IsNotBusy}" 
            helpersUI:PasswordBoxAssistant.BindPassword="true">
            <helpersUI:PasswordBoxAssistant.BoundPassword>
                <Binding Path="Password" Mode="TwoWay">
                    <Binding.ValidationRules>
                        <helpersUI:NotEmptyValidationRule ValidatesOnTargetUpdated="True"/>
                    </Binding.ValidationRules>
                </Binding>
            </helpersUI:PasswordBoxAssistant.BoundPassword>
        </PasswordBox>

        <Button 
            Margin="0, 20, 0, 0"
            x:Name="ButtonLogin"
            Grid.Row="3" 
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Style="{StaticResource MaterialDesignRaisedButton}"
            materialDesign:ButtonProgressAssist.Value="-1"
            materialDesign:ButtonProgressAssist.IsIndicatorVisible="{Binding IsBusy}"
            materialDesign:ButtonProgressAssist.IsIndeterminate="True"
            materialDesign:ButtonAssist.CornerRadius="5"
            Width="200"
            HorizontalAlignment="Center"
            Content="{Binding Connect}"
            Command="{Binding ButtonLoginCommand}" IsCancel="False"/>
    </Grid>
</Window>
